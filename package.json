{
  "name": "@exodus/lerna-utils",
  "version": "1.1.1",
  "author": "ExodusMovement",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExodusMovement/lerna-utils.git"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "main": "lib/index.js",
  "license": "UNLICENSED",
  "description": "Utility methods for building package logic in lerna monorepos",
  "scripts": {
    "test": "jest src",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"**/*.{json,md,yaml}\"",
    "format:check": "prettier --check \"**/*.{json,md,yaml}\"",
    "build": "tsc --build tsconfig.build.json",
    "watch": "tsc --watch -p tsconfig.build.json",
    "prepublishOnly": "yarn build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@exodus/eslint-config": "^3.0.0",
    "@exodus/prettier": "^0.1.5",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "jest": "^27.2.1",
    "memfs": "^3.4.7",
    "prettier": "^2.2.1",
    "semantic-release": "^19.0.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "prettier": "@exodus/prettier",
  "files": [
    "lib",
    "tsconfig.json",
    "README.md"
  ],
  "packageManager": "yarn@3.2.3"
}
